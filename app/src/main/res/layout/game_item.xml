<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130dp">

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:id="@+id/game_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@drawable/allgame_bg"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_img"
            android:layout_width="@dimen/_56dp"
            android:layout_height="@dimen/_54dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_7dp"
            android:src="@drawable/game1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/str_game1"
            android:textColor="@color/white"
            android:textSize="@dimen/_12dp" />

        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:id="@+id/game_btn"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_20dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4dp"
            android:background="@drawable/btncontinuebg">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_play"
                android:textColor="@color/white"
                android:textSize="@dimen/_12dp"
                android:textStyle="bold" />
        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
    </com.google.android.material.circularreveal.CircularRevealLinearLayout>
</com.google.android.material.circularreveal.CircularRevealRelativeLayout>