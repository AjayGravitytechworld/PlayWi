<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_16dp">

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/exit_iv"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/iran_sans_light"
            android:gravity="center"
            android:text="Confirm Exit..!!!"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:text="Do You Want to Exit ?"
            android:textColor="@color/white"
            android:textSize="@dimen/_20dp"
            android:textStyle="bold" />

        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:id="@+id/nativeAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="vertical" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl5"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_marginHorizontal="22sp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/collect_bg"
            android:gravity="center"
            android:text="No"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl4"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_marginHorizontal="22sp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/nobt"
            android:gravity="center"
            android:text="Yes"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </com.google.android.material.circularreveal.CircularRevealLinearLayout>
</com.google.android.material.circularreveal.CircularRevealRelativeLayout>