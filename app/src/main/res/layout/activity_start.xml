<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list"
    tools:context=".ui.aaStartActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/splashlogo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/startbtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85dp"
                    android:layout_marginHorizontal="@dimen/_30dp"
                    android:layout_marginBottom="8sp"
                    android:background="@drawable/startbtnbg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/start_iv"
                        android:layout_width="@dimen/_48dp"
                        android:layout_height="@dimen/_48dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:src="@drawable/startbtniv" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_toEndOf="@id/start_iv"
                        android:text="@string/str_start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_25dp"
                        android:textStyle="bold" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <com.google.android.material.circularreveal.CircularRevealLinearLayout
                    android:id="@+id/nativeAd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/sharebtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85dp"
                    android:layout_marginHorizontal="@dimen/_30dp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/shrebtnbg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/share"
                        android:layout_width="@dimen/_48dp"
                        android:layout_height="@dimen/_48dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:src="@drawable/shareiv" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_toEndOf="@id/share"
                        android:text="@string/str_share"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_25dp"
                        android:textStyle="bold" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/privecybtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85dp"
                    android:layout_marginHorizontal="@dimen/_30dp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/privecybg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/privecy"
                        android:layout_width="@dimen/_48dp"
                        android:layout_height="@dimen/_48dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:src="@drawable/privecyiv" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_toEndOf="@id/privecy"
                        android:text="@string/str_privecy"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_25dp"
                        android:textStyle="bold" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/ratebtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85dp"
                    android:layout_marginHorizontal="@dimen/_30dp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/ratebg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/rate"
                        android:layout_width="@dimen/_48dp"
                        android:layout_height="@dimen/_48dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:src="@drawable/stariv" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_toEndOf="@id/rate"
                        android:text="@string/str_rate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_25dp"
                        android:textStyle="bold" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>