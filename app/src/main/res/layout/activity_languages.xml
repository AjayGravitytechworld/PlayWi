<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbg"
    tools:context=".ui.LanguagesActivity">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/iran_sans_light"
            android:text="@string/str_languageSelect"
            android:textColor="@color/white"
            android:textSize="@dimen/_18dp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/select_btn1"
            android:layout_width="@dimen/_35dp"
            android:layout_height="@dimen/_35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10dp"
            android:src="@drawable/checkkk" />
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/nativeAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10dp">

            <com.google.android.material.circularreveal.CircularRevealLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10dp"
                android:orientation="vertical">

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/english"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                    android:background="@drawable/taskbtnbg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_eng"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:src="@drawable/f_eng" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lg_eng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toEndOf="@id/iv_eng"
                        android:text="@string/str_english"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18dp" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/hindi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/taskbtnbg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_hindi"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:src="@drawable/f_himdi" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lg_hindi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toEndOf="@id/iv_hindi"
                        android:text="@string/str_hindi"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18dp" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/spanish"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                     android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/taskbtnbg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_spanish"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:src="@drawable/f_spanish" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lg_spanish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toEndOf="@id/iv_spanish"
                        android:text="@string/str_spanish"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18dp" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/indonesia"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/taskbtnbg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_indonesia"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:src="@drawable/f_indonesia" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lg_indonesia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toEndOf="@id/iv_indonesia"
                        android:text="@string/str_indonesia"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18dp" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/portuguese"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                     android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/taskbtnbg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_portuguese"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:src="@drawable/f_portuguese" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lg_portuguese"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toEndOf="@id/iv_portuguese"
                        android:text="@string/str_portuguese"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18dp" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/korean"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                    android:layout_marginBottom="8sp"
                     android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/taskbtnbg">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_korean"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:src="@drawable/f_korean" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/lg_korean"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toEndOf="@id/iv_korean"
                        android:text="@string/str_Korean"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18dp" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>


                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/select_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60dp"
                    android:layout_marginHorizontal="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@drawable/lg_btnbg"
                    android:visibility="gone">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toEndOf="@id/iv_indonesia"
                        android:text="@string/str_select"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18dp" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
            </com.google.android.material.circularreveal.CircularRevealLinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:id="@+id/nativeAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/banner_container" />

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>