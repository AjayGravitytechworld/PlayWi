<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_370dp"
    android:layout_marginHorizontal="@dimen/_35dp"
    android:background="@drawable/leaderdailog_bg"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/close"
        android:layout_width="42sp"
        android:layout_height="42sp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_25dp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:src="@drawable/closebtn" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:text="@string/str_redee_dailog"
        android:textColor="@color/white"
        android:textSize="@dimen/_15dp" />
</com.google.android.material.circularreveal.CircularRevealLinearLayout>