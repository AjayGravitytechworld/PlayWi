<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allbg"
    tools:context=".ui.aFaqActivity">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_centerInParent="true"
                android:src="@drawable/backarrow"
                tools:ignore="ContentDescription" />
        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lblContactUs"
            style="@style/Text_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_faqs" />
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/banner_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.circularreveal.CircularRevealLinearLayout
                android:id="@+id/nativeAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nnbg">

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/parent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toStartOf="@+id/arrow1"
                        android:text="How to Withdraw coin from this Application"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/arrow1"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:src="@drawable/arrdown" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/child1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent1"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:background="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="After collectiing 1,00,000 Coin you can withdraw"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch1"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/watchvideo"
                        android:visibility="gone" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:visibility="gone"
                android:background="@drawable/nnbg">

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/parent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toStartOf="@+id/arrow2"
                        android:text="How many coin equal to one rupees"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/arrow2"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:src="@drawable/arrdown" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/child2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent2"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:background="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="100 coin equal to one rupees"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch2"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/watchvideo"
                        android:visibility="gone" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:visibility="gone"
                android:background="@drawable/nnbg">

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/parent3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toStartOf="@+id/arrow3"
                        android:text="How many coin equal to one rupees"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/arrow3"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:src="@drawable/arrdown" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/child3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent3"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:background="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="How many coin equal to one rupees"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch3"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/watchvideo"
                        android:visibility="gone" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/nnbg">

                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:id="@+id/parent4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toStartOf="@+id/arrow4"
                        android:text="How many coin equal to one rupees"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/arrow4"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:src="@drawable/arrdown" />
                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/child4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent4"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:background="@color/white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="How many coin equal to one rupees"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/watch4"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_marginHorizontal="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/watchvideo"
                        android:visibility="gone" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>